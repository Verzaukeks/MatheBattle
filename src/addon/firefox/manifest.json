{
  "manifest_version": 2,
  "name": "BrowserControl",
  "author": "Verzaukeks",
  "version": "1.0",
  "icons": {
    "64": "icon-64.png"
  },

  "permissions": [
    "tabs",
    "*://*/*"
  ],

  "background": {
    "scripts": ["config.js", "connector.js", "handler.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "BrowserControl",
    "default_popup": "popup/index.html",
    "default_icon": {
      "64": "icon-64.png"
    }
  }
}